{
  "name": "cross-tab",
  "version": "0.2.1",
  "description": "Module for storeon to sync state at different tabs of the browser",
  "main": "index.js",
  "author": "Ivan Solovev <ivan@solovev.one>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf api.md",
    "lint": "eslint *.js",
    "spell": "yarn docs && yaspeller *.md",
    "docs": "documentation build *.js -f md -o api.md",
    "test": "yarn lint && size-limit && yarn spell"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.2.1",
    "clean-publish": "^1.1.2",
    "documentation": "^11.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "rimraf": "^2.6.3",
    "size-limit": "^1.3.1",
    "storeon": "^0.8.2",
    "yaspeller": "^5.1.0"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "222 B"
    }
  ],
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "storeon",
      "versioning",
      "cross-tab"
    ]
  }
}
